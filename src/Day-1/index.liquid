layout: base-layout.liquid
pageTitle: The Breaking Bad Periodic Table
description: Characters of Breaking Bad represented as atoms
tags: projects
---
<header>
    <h1>The Breaking Bad Periodic Table</h1>
</header>
<div class="divider"></div>
<main>
    <div class="character">
        <div class="character__image"></div>

        <div class="character__description">
            <div class="text-block js-name">
                <h5>Name</h5>
                <p>Walter White</p>
            </div>
            <div class="text-block js-nickname">
                <h5>Nickname</h5>
                <p>Heisenberg</p>
            </div>
            <div class="text-block js-occupation">
                <h5>Occupation</h5>
                <p>High School Chemistry Teacher</p>
            </div>
            <div class="text-block js-portrayed">
                <h5>Portrayed By</h5>
                <p>Bryan Cranston</p>
            </div>
        </div>
    </div>

    <div class="info"></div>

    <!-- Empty Divs Start -->
    <div class="empty1"></div>
    <div class="empty2"></div>
    <div class="empty3"></div>
    <div class="empty4"></div>
    <!-- Empty Divs End -->

    {% for character in breakingbad %}
    {% include 'Day-1/cardComponent' with id: character.id, abbr: character.abbr, firstName: character.firstName, lastName: character.lastName%}
    {% endfor %}
</main>